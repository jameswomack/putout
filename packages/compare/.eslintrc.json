{
    "rules": {
        "no-cond-assign": "off"
    },
    "overrides": [{
        "files": ["lib/**/*.spec.js", "test/**"],
        "rules": {
            "node/no-extraneous-require": "off",
            "node/no-unpublished-require": "off"
        }
    }],
    "extends": [
        "plugin:node/recommended",
        "plugin:putout/recommended"
    ],
    "plugins": [
        "putout",
        "node"
    ]
}
